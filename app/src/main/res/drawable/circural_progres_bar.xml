    <item android:id="@android:id/progress">
        <shape
            android:innerRadius="80dp"
            android:shape="ring"
            android:thickness="10dp"
            android:useLevel="false">
            <solid android:color="@color/primaryColorDark" />
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape
            android:innerRadius="80dp"
            android:shape="ring"
            android:thickness="10dp"
            android:useLevel="false">
            <solid android:color="@color/primaryColorDark" />
        </shape>
    </item>
</layer-list>